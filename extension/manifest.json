{
  "manifest_version": 2,
  "name": "DSP Roster Management Tool",
  "version": "1.6.2",
  "description": "DSP rostering management with automatic notifications and messaging. Cross-browser compatible with multi-service type support.",
  "permissions": [
    "alarms",
    "storage",
    "tabs",
    "activeTab",
    "notifications",
    "https://logistics.amazon.co.uk/*",
    "https://hooks.chime.aws/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "browser-polyfill.js",
      "background/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://logistics.amazon.co.uk/internal/scheduling/dsps*"
      ],
      "js": [
        "browser-polyfill.js",
        "content/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "DSP Roster Management",
    "default_icon": {
      "16": "icons/icon.svg",
      "32": "icons/icon.svg",
      "48": "icons/icon.svg",
      "64": "icons/icon.svg",
      "96": "icons/icon.svg",
      "128": "icons/icon.svg"
    }
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon.svg",
    "32": "icons/icon.svg",
    "48": "icons/icon.svg",
    "64": "icons/icon.svg",
    "96": "icons/icon.svg",
    "128": "icons/icon.svg"
  },
  "web_accessible_resources": [
    "options/*",
    "popup/*",
    "icons/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "dsp-roster-management@maxwell.com",
      "strict_min_version": "75.0"
    }
  },
  "author": "@emaxwabo"
}