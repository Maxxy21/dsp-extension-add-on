{
  "name": "dsp-extension-cicd",
  "type": "module",
  "version": "1.11.3",
  "description": "CI/CD pipeline for DSP Management Extension",
  "scripts": {
    "dev": "npm run build:dev && web-ext run --source-dir=./extension/dist --browser-console",
    "build": "npm run build:prod && node scripts/build-local.cjs",
    "build:dev": "rollup -c --environment NODE_ENV:development",
    "build:prod": "rollup -c --environment NODE_ENV:production",
    "lint": "npm run lint:js && npm run lint:ext",
    "lint:js": "eslint extension/src/ --ext .js --fix",
    "lint:ext": "npm run build:dev && web-ext lint --source-dir=./extension/dist",
    "format": "prettier --write extension/src/",
    "test": "jest && npm run lint",
    "test:unit": "jest --testMatch='**/*.test.js'",
    "test:watch": "jest --watch",
    "version:patch": "npm version patch --no-git-tag-version && node scripts/update-manifest.cjs",
    "version:minor": "npm version minor --no-git-tag-version && node scripts/update-manifest.cjs",
    "version:major": "npm version major --no-git-tag-version && node scripts/update-manifest.cjs",
    "clean": "rimraf dist extension/dist",
    "clean:cache": "rimraf node_modules/.cache",
    "prebuild": "npm run clean",
    "prebuild:prod": "npm run clean",
    "prebuild:dev": "npm run clean",
    "build:mozilla": "echo 'Mozilla version created automatically with build command'",
    "sign:mozilla": "web-ext sign --source-dir=./extension/dist --channel=unlisted --artifacts-dir=./dist",
    "analyze": "rollup -c --environment ANALYZE:true",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@testing-library/dom": "^8.20.0",
    "archiver": "^5.3.2",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "jest-environment-jsdom": "^29.4.3",
    "jest-webextension-mock": "^3.8.9",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "rimraf": "^5.0.5",
    "rollup": "^3.17.2",
    "rollup-plugin-copy": "^3.4.0",
    "@rollup/plugin-terser": "^0.4.0",
    "web-ext": "^8.8.0"
  },
  "keywords": [
    "firefox",
    "extension",
    "automation",
    "cicd",
    "webextension",
    "amazon",
    "logistics"
  ],
  "author": "Maxwell Aboagye",
  "license": "MIT",
  "dependencies": {
    "xlsx": "^0.18.5"
  },
  "lint-staged": {
    "extension/src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "jest-webextension-mock"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "extension/src/**/*.js",
      "!extension/src/**/*.test.js",
      "!extension/src/**/vendor/**"
    ]
  }
}
